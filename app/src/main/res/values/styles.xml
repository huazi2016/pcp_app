<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--自定义dialog-->
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 没有标题 -->
        <item name="android:windowNoTitle">false</item>
        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="App.Theme.Launch" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="article_detail_toolbar">
        <item name="android:colorControlNormal">#FFFFFFFF</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">

        <item name="android:windowNoTitle">true</item>

        <item name="android:windowBackground">@android:color/transparent</item>

    </style>


    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">

        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>

        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>

    </style>

    <style name="editText_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_333333</item>
        <item name="android:textColorHint">@color/c_999999</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/shape_white_cor</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <declare-styleable name="ChatKeyboardLayout">
        <attr name="sendButtonBackground" format="reference|color" />
        <attr name="sendButtonText" format="string|reference" />
        <attr name="sendButtonTextColor" format="reference|color" />
        <!-- set keyboard style, default is text_only -->
        <attr name="keyboardStyle" format="enum">
            <enum name="text_only" value="1" />
            <enum name="text_emoticon" value="2" />
            <enum name="chat_style" value="3" />
        </attr>
        <!-- face icon, you can use state_selected attribute-->
        <attr name="faceIcon" format="reference" />
        <!-- keyboard chat style, left default icon drawable -->
        <attr name="leftDefaultIcon" format="reference" />
        <!-- keyboard chat style, left showed icon after clicked -->
        <attr name="leftSecondIcon" format="reference" />
        <!-- keyboard chat style, right default shown icon -->
        <attr name="rightIcon" format="reference" />
        <!-- keyboard chat style, whether show right icon  or just show send buttonßßß-->
        <attr name="showRightIcon" format="boolean" />
    </declare-styleable>

    <style name="common_cutline_eeeeee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#EEEEEE</item>
    </style>

    <!--圆形ProgressBar-->
    <style name="black_progress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_h</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>
</resources>
