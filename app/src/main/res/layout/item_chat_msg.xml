<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp18"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llLeftMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp05"
        android:layout_marginLeft="@dimen/dp15"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        android:background="@color/c_white"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLeftContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:textSize="@dimen/sp13"
            android:textColor="@color/c_333333"
            android:text="我是左边我是左边我是左边我是左边我是左边我是左边我是左边我是左边我是左边" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRightMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp05"
        android:visibility="visible"
        android:background="#A0D0E6"
        android:layout_marginRight="@dimen/dp15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRightContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:textSize="@dimen/sp13"
            android:textColor="@color/c_333333"
            android:text="我是右边" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>